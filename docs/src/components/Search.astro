---
import "@docsearch/css";
---

<div id="docsearch" transition:persist></div>

<script>
    import docsearch from "@docsearch/js";
    
    let searchInstance: ReturnType<typeof docsearch> | null = null;

    const initSearch = () => {
        if (!searchInstance) {
            searchInstance = docsearch({
                container: "#docsearch",
                appId: "ANAV9NA8H5",
                indexName: "refact",
                apiKey: "2bae895dcb109e0a9b87ee935c121c85",
            });
        }
    };

    // Initialize on first load only
    document.addEventListener('astro:page-load', initSearch, { once: true });
</script>

<style>
    #docsearch {
        width: 100%;
        max-width: 32rem;
    }

    :global(.DocSearch-Button) {
        width: 100%;
        border-radius: 8px !important;
        padding: 0.5rem 1rem !important;
        background: var(--sl-color-black) !important;
        border: 1px solid var(--sl-color-gray-5);
        height: 2.5rem !important;
        margin: 0 !important;
    }

    :global(.DocSearch-Button:hover),
    :global(.DocSearch-Button:focus) {
        border-color: var(--sl-color-accent);
        box-shadow: none !important;
        outline: none !important;
        background: var(--sl-color-black) !important;
    }

    :global(.DocSearch-Button-Keys) {
        display: flex;
        min-width: auto !important;
        padding: 0 !important;
        border: none !important;
        gap: 0.25rem;
        background: none !important;
    }

    :global(.DocSearch-Button-Key) {
        background: none !important;
        box-shadow: none !important;
        color: var(--sl-color-gray-3) !important;
        position: relative !important;
        top: 0 !important;
        padding: 0 !important;
        margin: 0 !important;
        width: auto !important;
        height: auto !important;
        font-size: 0.75rem !important;
    }

    :global(.DocSearch-Search-Icon) {
        width: 1rem !important;
        height: 1rem !important;
        color: var(--sl-color-gray-3) !important;
    }

    :global(.DocSearch-Button-Placeholder) {
        font-size: 0.875rem !important;
        padding: 0 0.5rem !important;
    }

    :global(.DocSearch-Modal) {
        border-radius: 12px;
        margin-top: 0.5rem;
    }

    :global(.DocSearch-SearchBar) {
        padding: 1rem !important;
    }

    :global(.DocSearch-Form) {
        border-radius: 8px !important;
    }

    :global(.DocSearch-Hit-source),
    :global(.DocSearch-Hit a) {
        background: none !important;
        box-shadow: none !important;
    }

    :global(.DocSearch-Hit) {
        padding: 0.5rem !important;
        border-radius: 6px !important;
    }

    :global(.DocSearch-Hit[aria-selected=true]) {
        background: var(--sl-color-gray-6) !important;
    }
</style>